/*
===============================================================================
Quality Checks: silver layer
===============================================================================

Description:
This script checks data quality in Silver tables after loading.
It verifies:
- No NULL or duplicate primary keys
- No extra spaces in text columns
- Proper data standardization
- Valid date ranges and date order
- Correct calculations and data consistency

If any query returns rows, those records need to be reviewed.
*/


-- 1.Checking: silver.crm_cust_info


-- Check NULL or duplicate customer IDs
SELECT 
    cst_id,
    COUNT(*) 
FROM silver.crm_cust_info
GROUP BY cst_id
HAVING COUNT(*) > 1 OR cst_id IS NULL;

-- Check unwanted spaces in customer key
SELECT 
    cst_key
FROM silver.crm_cust_info
WHERE cst_key <> TRIM(cst_key);

-- Check marital status standard values
SELECT DISTINCT 
    cst_marital_status
FROM silver.crm_cust_info;



-- 2. Checking: silver.crm_prd_info


-- Check NULL or duplicate product IDs
SELECT 
    prd_id,
    COUNT(*) 
FROM silver.crm_prd_info
GROUP BY prd_id
HAVING COUNT(*) > 1 OR prd_id IS NULL;

-- Check unwanted spaces in product name
SELECT 
    prd_nm
FROM silver.crm_prd_info
WHERE prd_nm <> TRIM(prd_nm);

-- Check for negative or NULL product cost
SELECT 
    prd_cost
FROM silver.crm_prd_info
WHERE prd_cost < 0 OR prd_cost IS NULL;

-- Check product line standardization
SELECT DISTINCT 
    prd_line
FROM silver.crm_prd_info;

-- Check invalid date order (end date before start date)
SELECT *
FROM silver.crm_prd_info
WHERE prd_end_dt < prd_start_dt;



-- 3. Checking: silver.crm_sales_details


-- Check invalid due date values in bronze layer (raw data check)
SELECT 
    sls_due_dt
FROM bronze.crm_sales_details
WHERE sls_due_dt IS NULL
   OR LENGTH(sls_due_dt::text) <> 8
   OR sls_due_dt::int > 20500101
   OR sls_due_dt::int < 19500101;

-- Check invalid date order (order date after ship/due date)
SELECT *
FROM silver.crm_sales_details
WHERE sls_order_dt > sls_ship_dt
   OR sls_order_dt > sls_due_dt;

-- Check sales calculation (sales = quantity * price)
SELECT DISTINCT
    sls_sales,
    sls_quantity,
    sls_price
FROM silver.crm_sales_details
WHERE sls_sales <> (sls_quantity * sls_price)
   OR sls_sales IS NULL
   OR sls_quantity IS NULL
   OR sls_price IS NULL
   OR sls_sales <= 0
   OR sls_quantity <= 0
   OR sls_price <= 0
ORDER BY sls_sales, sls_quantity, sls_price;



-- 4. Checking: silver.erp_cust_az12


-- Check valid birthdate range (1924-01-01 to today)
SELECT DISTINCT
    bdate
FROM silver.erp_cust_az12
WHERE bdate < DATE '1924-01-01'
   OR bdate > CURRENT_DATE;

-- Check gender standardization
SELECT DISTINCT
    gen
FROM silver.erp_cust_az12;


-- 5. Checking: silver.erp_loc_a101


-- Check country standardization
SELECT DISTINCT
    cntry
FROM silver.erp_loc_a101
ORDER BY cntry;



-- 6. Checking: silver.erp_px_cat_g1v2


-- Check unwanted spaces in category fields
SELECT *
FROM silver.erp_px_cat_g1v2
WHERE cat <> TRIM(cat)
   OR subcat <> TRIM(subcat)
   OR maintenance <> TRIM(maintenance);

-- Check maintenance standard values
SELECT DISTINCT
    maintenance
FROM silver.erp_px_cat_g1v2;
